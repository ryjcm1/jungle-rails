<tr>
  <td>
    <%= image_tag item[:image].tiny %>
  </td>
  <td>
    <h4><%= item[:name] %></h4>
    <br>
    <p><%= item[:description] %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol item[:item_price_cents] %>
  </td>
  <td>
    <%= item[:quantity] %>
  </td>
  <td>
    <%= humanized_money_with_symbol (item[:total_price_cents] / 100.0) %>
  </td>
</tr>
